            </Grid>

            <!-- Keep RightPanelGrid Width="25" by default. -->
            <Grid x:Name="RightPanelGrid" HorizontalAlignment="Right" Width="25" Grid.Column="1" Background="#59000000" Canvas.ZIndex="3">

                <TextBlock Text="upcoming events" FontFamily="Segoe UI" FontSize="18" Margin="45,15,15,15" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF778798" Offset="0"/>
                            <GradientStop Color="#FF4D5863" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" MouseLeftButtonUp="image_MouseLeftButtonUp" >
                    <Image x:Name="DoubleArrowImg" Cursor="Hand" Source="/BasCal_SilverlightClient;component/Content/doublearrow.png" Width="20" Height="20" HorizontalAlignment="Left" Margin="3,0,0,0" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                        <Image.RenderTransform>
                            <CompositeTransform/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
                <ListBox x:Name="listboxUpcomingEvents" ItemsSource="{Binding UpcomingEventsInShortFormatList}" Margin="45,45,15,15" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Cursor="Hand" x:Name="UpcomingEventListItem" Orientation="Vertical" Margin="0,5,0,0" HorizontalAlignment="Stretch" MouseLeftButtonUp="UpcomingEventListItem_MouseLeftButtonUp">
                                <Grid >
                                    <TextBlock Text="{Binding EventId}" Visibility="Collapsed"/>
                                    <TextBlock Height="20" Text="{Binding Name}" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe UI" FontWeight="Bold" Foreground="#FFEBEBEB"/>
                                </Grid>
                                <Grid >
                                    <TextBlock Height="30" Margin="0,-15,0,5" VerticalAlignment="Center"  Text="{Binding StartTime}" FontSize="12" FontFamily="Segoe UI" Foreground="#FFEBEBEB"/>
                                    <TextBlock Height="30" Margin="0,15,0,5" VerticalAlignment="Center"  Text="{Binding EndTime}" FontSize="12" FontFamily="Segoe UI" Foreground="#FFEBEBEB"/>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

        </Grid>

        <!-- Keep Opacity="0" Visibility="Collapsed" by default. -->
        <Grid x:Name="EventFullInfo" Grid.ColumnSpan="2" Grid.RowSpan="2" Canvas.ZIndex="5" Background="#66778899" Opacity="0" Visibility="Collapsed">

            <Grid x:Name="EventFullInfoInnerBox" Width="400" Height="250" Background="#FF4D5863" DataContext="{Binding UpcomingEventInFull}" Canvas.ZIndex="6" RenderTransformOrigin="0.5,0.5" >
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Foreground" Value="#FFEBEBEB"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.RenderTransform>
                    <CompositeTransform ScaleX="0" ScaleY="0"/>
                    <!--ScaleX="0" ScaleY="0"-->
                </Grid.RenderTransform>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="50" Opacity="100" ShadowDepth="10"  Direction="-50" Color="#FF1F2A36" />
                </Grid.Effect>

                <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" FontWeight="Bold">
					<Run Text="Name:"/>
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" FontWeight="Bold">
					<Run Text="Type:"/>
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" FontWeight="Bold">
					<Run Text="Summary:"/>
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" FontWeight="Bold">
					<Run Text="Location:"/>
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" FontWeight="Bold">
					<Run Text="Starts at:"/>
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" FontWeight="Bold">
					<Run Text="Ends at:"/>
                </TextBlock>

                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Name}"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Type}"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding Summary}"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding Location}"/>
                <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding StartTime}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Column="1" Grid.Row="5" Text="{Binding EndTime}" HorizontalAlignment="Left"/>

                <Image x:Name="EventFullInfoCloseBtn" Cursor="Hand" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Width="15" Height="15" Source="/BasCal_SilverlightClient;component/Content/closebtn.png" MouseLeftButtonUp="EventFullInfoCloseBtn_MouseLeftButtonUp" />

            </Grid>

        </Grid>
    </Grid>

</UserControl>
